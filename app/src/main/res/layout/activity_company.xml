<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompanyActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="127dp"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/hemphublogo"

        />
    <TextView
        android:id="@+id/almost_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="          Almost Done! Please Enter Company Information Below"


        />

    <EditText
        android:id="@+id/edittext_state"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:drawableLeft="@drawable/ic_add_location_black_24dp"
        android:hint="State"
        app:errorEnabled="true"
        android:inputType="text"

        />
    <EditText
        android:id="@+id/edittext_city"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:drawableLeft="@drawable/ic_business_black_24dp"
        android:hint="City"
        android:inputType="text"
        />

    <EditText
        android:id="@+id/edittext_zipcode"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:hint="Zip Code"
        android:inputType="text"
        />


    <Button
        android:id="@+id/button_finish_registration"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:text="Finish registration"
        android:enabled="false"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    </LinearLayout>


</LinearLayout>